@model FoodMenu.Models.Food
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" style="width: 50%" />
    </div>
    <div class="d-flex justify-content-center">
        @Model.Price.ToString("N2") Dollars
    </div>
    <div class="d-flex justify-content-center">
        Ingridients:
        <ul>
            @foreach(var item in Model.FoodMenuIngridients)
            {
                <li>
                    @item.Ingridient.Name
                </li>
            }
        </ul>
    </div>
    <div>
        <a class="btn btn-info" asp-action="Index">Back</a>
    </div>
</div>