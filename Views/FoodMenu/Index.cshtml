@model List<FoodMenu.Models.Food>
@{
    ViewData["Title"] = "Menu Index";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="container">
                <div class="d-flex justify-content-center">
                    <h3>@item.Name</h3>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width: 50%" />
                </div>
                <div class="d-flex justify-content-center">
                    @item.Price.ToString("N2") Dollars
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </div>
            </div>
        }
    </div>
</div>